<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_status_detail"
        style="@android:style/TextAppearance.Material.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Status: Alive"/>

    <TextView
        android:id="@+id/text_view_specie_detail"
        style="@android:style/TextAppearance.Material.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_status_detail"
        app:layout_constraintStart_toStartOf="@+id/text_view_status_detail"
        app:layout_constraintTop_toBottomOf="@+id/text_view_status_detail"
        tools:text="Specie: Human"/>

    <TextView
        android:id="@+id/text_view_origin_detail"
        style="@android:style/TextAppearance.Material.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_specie_detail"
        app:layout_constraintStart_toStartOf="@+id/text_view_specie_detail"
        app:layout_constraintTop_toBottomOf="@+id/text_view_specie_detail"
        tools:text="Origin: Earth (C-137)" />


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_origin_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>